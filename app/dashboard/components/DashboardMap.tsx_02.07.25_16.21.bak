      location: eq.location,
      date: eq.date,
      source: eq.source,
      data: eq,
      severity: eq.magnitude >= 6.0 ? 'critical' : eq.magnitude >= 5.0 ? 'high' : eq.magnitude >= 4.0 ? 'medium' : 'low'
    })),
    ...liveFires.map(fire => ({
      id: fire.id,
      type: 'fire' as const,
      title: 'YangÄ±n Tespiti',
      location: fire.location || 'Bilinmeyen konum',
      date: fire.date,
      source: fire.source,
      data: fire,
      severity: fire.confidence && fire.confidence >= 90 ? 'high' : fire.confidence && fire.confidence >= 70 ? 'medium' : 'low'
    })),
    ...fires.map(fire => ({
      id: fire.id,
      type: 'fire' as const,
      title: 'YangÄ±n Tespiti',
      location: fire.location || 'Bilinmeyen konum',
      date: fire.date,
      source: fire.source,
      data: fire,
      severity: 'medium'
    })),
    ...tsunamis.map(ts => ({
      id: ts.id,
      type: 'tsunami' as const,
      title: 'Tsunami UyarÄ±sÄ±',
      location: ts.location || 'Bilinmeyen konum',
      date: ts.date,
      source: ts.source || 'AFAD',
      data: ts,
      severity: 'critical'
    }))
  ].sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());

  if (!isClient) {
    return (
      <Card title="ğŸ—ºï¸ CanlÄ± Acil Durum HaritasÄ±" style={{ minHeight: "600px" }}>
        <div style={{ height: "350px", display: "flex", justifyContent: "center", alignItems: "center" }}>
          <Spin size="large" />
        </div>
      </Card>
    );
  }

  const getStatusBadge = () => {
    if (liveEarthquakes.length > 0) {
      return <Badge status="processing" text="CanlÄ± Veri" />;
    } else if (allMarkers.length > 0) {
      return <Badge status="warning" text="Demo Veri" />;
    } else {
      return <Badge status="default" text="Veri Yok" />;
    }
  };

  const getSeverityColor = (severity: string) => {
    switch (severity) {
      case 'critical': return '#e74c3c';
      case 'high': return '#e67e22';
      case 'medium': return '#f39c12';
      case 'low': return '#27ae60';
      default: return '#95a5a6';
    }
  };

  const getSeverityText = (severity: string) => {
    switch (severity) {
      case 'critical': return 'KRÄ°TÄ°K';
      case 'high': return 'YÃœKSEK';
      case 'medium': return 'ORTA';
      case 'low': return 'DÃœÅÃœK';
      default: return 'BELÄ°RSÄ°Z';
    }
  };

  const getEventIcon = (type: string) => {
    switch (type) {
      case 'earthquake': return <span style={{ fontSize: '16px' }}>ğŸ”ï¸</span>;
      case 'fire': return <span style={{ fontSize: '16px' }}>ğŸ”¥</span>;
      case 'tsunami': return <span style={{ fontSize: '16px' }}>ğŸŒŠ</span>;
      default: return <span style={{ fontSize: '16px' }}>â„¹ï¸</span>;
    }
  };

  return (
    <Card 
      title={
        <div style={{ display: "flex", justifyContent: "space-between", alignItems: "center" }}>
          <span>ğŸ—ºï¸ CanlÄ± Acil Durum HaritasÄ±</span>
